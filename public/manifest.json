{
  "manifest_version": 3,
  "name": "Kotodama",
  "short_name": "Kotodama",
  "version": "1.0.0",
  "description": "Compose tweets and replies that maintain your brand voice while adapting to your audience",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Kotodama",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/panel/index.html",
        "panel.js",
        "index.js",
        "index.css",
        "icons/kotodama-button.svg"
      ],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ]
}
