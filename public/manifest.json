{
  "manifest_version": 3,
  "name": "Kotodama",
  "short_name": "Kotodama",
  "version": "1.7.1",
  "description": "Compose tweets and replies that maintain your brand voice while adapting to your audience",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Kotodama",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "72": "icons/icon72.png",
      "96": "icons/icon96.png",
      "128": "icons/icon128.png",
      "144": "icons/icon144.png",
      "192": "icons/icon192.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "72": "icons/icon72.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png",
    "144": "icons/icon144.png",
    "192": "icons/icon192.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/panel/index.html",
        "panel.js",
        "index.js",
        "index.css",
        "icons/*.png"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ]
    }
  ]
}